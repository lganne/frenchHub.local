{# empty Twig template #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../../css/style.css " />             
{% endblock %}

{% block body %}
<section id="member" class="form content form_content standard" data-id="active_content">
    <a href="/accueil" id="logo_top"><img src="../img/logo-french.png" alt="Logo de MyFrenchHub"></a>

       
        {% if( mess  |  length > 0)  %}
                <span class="mess">Le nouveau salarié a bien été enregistré<br>
                         
                          Le login : {{ mess.username }} <br>
                          Le mot de passe est : {{ mess.motpass }}
                </span><br>
                               
         {% endif %}
  
    <form>
        {% for item in donnee %}
        <h1><a href="/accueil" class="return"><</a>Espace <strong>{{item.name|upper}}</strong></h1><br />
        <h2 class="underline">Retrouver et mettez à jour toutes vos informations personnelles</h2>
        <h3>Renseignements</h3>
            <table class="left">
                <tr>
                    <td>
                        <label for='societe'>Nom entreprise*</label>
                    </td><!--
                 --><td>
                        <input type='text' name='societe'  value="{{item.name}}"  class="form-control"  readonly="readonly"
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="activite">Domaine d'activitée*</label>
                    </td><!--
                 --><td>
                        <input type="text"  name="activite"  value="{{item.activity}}"class="form-control" readonly="readonly">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="adress">Adresse*</label> 
                    </td><!--
                 --><td>
                        <input type="text" name="adress" value="{{item.adress}}" class="form-control" readonly="readonly" >
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="codepostal">Code postal*</label> 
                    </td><!--
                 --><td>
                        <input type="text" name="cp" value="{{item.cp}}" class="form-control" readonly="readonly">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="ville">Ville*</label> 
                    </td><!--
                 --><td>
                        <input type="text"  name="ville" value="{{item.Ville}}"  class="form-control" readonly="readonly">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="pays">Pays*</label> 
                    </td><!--
                 --><td>
                        <input type="text"  name="pays" value="{{item.Pays}}"  class="form-control" readonly="readonly">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="siren">Siren*</label> 
                    </td><!--
                 --><td>
                        <input type="text" name="siren" value="{{item.siren}}" class="form-control" readonly="readonly" >
                    </td>
                </tr>
            </table><!--
     --><table class="right">
            <tr>
                <td>
                    <p>Civilité*</p>
                </td><!--
             --><td>
                    {%  if(item.civilite==0) %}
                        <label for="opt2">Mme</label> <input required type="radio" name="opt" id="opt2" readonly="readonly"/>
                        <label for="opt1">Mr</label><input required type="radio" name="opt" id="opt1" readonly="readonly" checked />
                    {% else %}
                        <label for="opt2">Mme</label> <input required type="radio" name="opt" id="opt2"  readonly="readonly"checked />
                        <label for="opt1">Mr</label><input required type="radio" name="opt" id="opt1" readonly="readonly"/>
                   {% endif %}
                </td>
            </tr>
            <tr>
                <td>
                    <label for="nom">Nom*</label> 
                </td><!--
             --><td>
                    <input type="text" name="contactNom"  value="{{item.contactNom}}" readonly="readonly" >
                </td>
            </tr>
            <tr>
                <td>
                    <label for="prenom">Prénom*</label>
                </td><!--
             --><td>
                    <input type="text" name="contactPrenom"  value="{{item.contactPrenom}}" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="fonction">Fonction*</label>
                </td><!--
             --><td>
                    <input type="text" name="fonction"  value="{{item.fonction}}"  readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="email">Email*</label>
                </td><!--
             --><td>
                    <input type="email" name="email"  value="{{item.emailContact}}"  readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Tel">Tel*</label>
                </td><!--
             --><td>
                    <input type="tel" name="tel"   value="{{item.tel}}" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="salarier">Nombres de salariés*</label> 
                </td><!--
             --><td>
                    <select name="salarier" id="salarier">
                        {%  if(item.NbreSalarier==1) %}
                            <option value="1" selected >1 à 49</option> 
                            <option value="2" >50 à 249</option> 
                            <option value="3">250 à 1000</option> 
                            <option value="4">plus de 1000</option>
                        {% endif %}
                        {%  if(item.NbreSalarier==2) %}
                            <option value="1" >1 à 49</option> 
                            <option value="2" selected >50 à 249</option> 
                            <option value="3">250 à 1000</option> 
                            <option value="4">plus de 1000</option>
                        {% endif %}
                        {%  if(item.NbreSalarier==3) %}
                            <option value="1" >1 à 49</option> 
                            <option value="2" >50 à 249</option> 
                            <option value="3" selected  >250 à 1000</option> 
                            <option value="4">plus de 1000</option>
                        {% endif %}
                        {%  if(item.NbreSalarier==4) %}
                            <option value="1" >1 à 49</option> 
                            <option value="2" >50 à 249</option> 
                            <option value="3" >250 à 1000</option> 
                            <option value="4" selected  >plus de 1000</option>
                        {% endif %}
                    </select>
                </td>
            </tr>
            {% endfor %}   
        </form>
        </table>
        <h2 class="underline">Gestion des salarié</h2>
            <table class="left listing">
                <thead>
                    <tr >
                        <th>Liste des salariés</th>
                    </tr>
                </thead>
                <tbody>
                    {% for Sal in listeSal %}
                        <tr>
                            <td>{{Sal.name}} {{Sal.firstname}} - {{Sal.email}} - {{Sal.fonction}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table><!--
         --><table class="right">
                <form action="/ajoutSalarie" method="post">
                    {% for item in donnee %}
                        <input type="text" name="ident" value='{{item.id}}'  hidden> 
                    {% endfor %}
                    <tr >
                        <th colspan="2">Ajouter un salarié</th>
                    </tr>
                    <tr>
                        <td>
                            <label for="Nom">Nom*</label>
                        </td><!--
                     --><td>
                            <input type="text" name="Nom" >
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="Prenom">Prenom*</label>
                        </td><!--
                     --><td>
                            <input type="text" name="Prenom" >
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="fonction">Fonction*</label>
                        </td><!--
                     --><td>
                            <input type="text" name="fonction" >
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="email">Email*</label>
                        </td><!--
                     --><td>
                            <input type="email" name="email" >
                        </td>
                    </tr>
                    <input type="submit" name="valider" value="valider">
                </form>
            </table>
         </section>
                          
{% endblock %}
